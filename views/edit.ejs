<% include partials/header %>



<div class="ui main text container segment">
    <div class="ui huge header">TIME FOR YOUR EDIT OF <%= blog.title%>MOTHERF!!!</div>
    <div class="ui form">
        <form class="ui form" action="/blogs/<%=blog.id%>?_method=PUT" method="POST">
            <div class="field">
                <label for="title">Title</label>
                <input type="text" name="blog[title]" value="<%=blog.title%>">
            </div>
            <div class="field">
                <label for="image">Image URL</label>
                <input type="text" name="blog[image]" value="<%=blog.image%>">
            </div>
            <div class="field">
                <label for="body">Body</label>
                <textarea name="blog[body]"><%-blog.body%></textarea>
            </div>
            <div>
                <button class="ui big teal button" type="submit">Edit</button>
                <a href="/blogs/<%=blog.id%>?_method=DELETE">DELETE</a>
                
            </div>
        </form>
        
</div>

</div>



<% include partials/footer %>