<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">New blog </div>
    
    <div class="ui form">

        <form class="ui form" action="/blogs" method="POST" name="">
            <div class="field">
                <label for="title">Title</label>
                <input type="text" name="blog[title]" placeholder="Title">
            </div>
            <div class="field">
                <label for="image">Image URL</label>
                <input type="text" name="blog[image]" placeholder="image URL">
            </div>
            <div class="field">
                <label for="body">Body</label>
                <textarea name="blog[body]" placeholder="Blogpost content"></textarea>
            </div>
            <div>
                <button class="ui big teal button" type="submit">Submit</button>
            </div>
        </form>
</div>

</div>

