<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        <h1><%= blogpost.title  %></h1>
    </div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blogpost.image %>" alt="">
            <div class="content">
                    <span><%= blogpost.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- blogpost.body %></p>
            </div>
        </div>
        <a href="/blogs/<%=blogpost.id%>/edit" class="ui big teal button">edit</a>
        <form class="ui form" id="deleteForm" action="/blogs/<%=blogpost.id%>?_method=DELETE" method="POST">
            <button class="ui basic red button" type="submit">DELETE</button>
    </form>
    </div>
    
</div>

<% include partials/footer %>